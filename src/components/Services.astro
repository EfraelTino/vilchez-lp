---
import { Image } from "astro:assets";
import type { ServiceProps } from "../lib/types";
const services: ServiceProps = [
    {
        id: 1,
        title: "OBRAS CIVILES",
        subtitle: "Edificación & Vialidad",
        desc: "Ejecución integral de infraestructura: Pavimentación, pistas, veredas y complejos deportivos.",
        asset: "/services/obras.jpg",
        theme: "blue", // Azul (#0092b8)
    },
    {
        id: 2,
        title: "INST. SANITARIAS",
        subtitle: "Especialidad Core",
        desc: "Expertos en redes complejas (agua/desagüe), montantes y equipamiento para edificios y C.C.",
        asset: "/services/2.jpg",
        theme: "blue",
    },
    {
        id: 3,
        title: "SIST. CONTRA INCENDIO",
        subtitle: "Seguridad Certificada",
        desc: "Instalación de cuartos de bombas, gabinetes y sistemas de rociadores (Sprinklers).",
        asset: "/services/3.jpg",
        theme: "gold", // Amarillo (#ffb900)
    },
    {
        id: 4,
        title: "ALQUILER DE MAQUINARIA",
        subtitle: "Flota Línea Amarilla",
        desc: "Excavadoras, Retroexcavadoras, Volquetes y Grúas disponibles para movimiento de tierras.",
        asset: "/services/4.jpg",
        theme: "gold",
    },
    {
        id: 5,
        title: "SANEAMIENTO",
        subtitle: "Servicios Generales",
        desc: "Descolmatación, mantenimiento sanitario y soldadura de tanques industriales.",
        asset: "/services/5.jpg",
        theme: "blue",
    },
    {
        id: 6,
        title: "PROYECTOS INTEGRALES",
        subtitle: "Gerencia & Construcción",
        desc: "Gestión completa del ciclo de vida del proyecto bajo estándares PMBOK y SSOMA.",
        asset: "/services/6.jpg",
        theme: "blue",
    },
];
---

<section
    class="relative py-10 md:py-24 overflow-hidden bg-[#09090b]"
    id="soluciones"
>
    <div
        class="absolute top-0 center w-full h-[500px] bg-gradient-to-b from-[#0092b8]/0 to-transparent pointer-events-none"
    >
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 md:px-6">
        <div class="text-center mb-16 max-w-3xl mx-auto">
            <span
                class="text-[#ffb900] font-bold tracking-[0.2em] text-xs uppercase mb-3 block"
            >
                Potencia & Precisión
            </span>
            <h2
                class="text-4xl md:text-5xl font-bold text-white mb-6 tracking-tight"
            >
                Soluciones <span class="text-[#0092b8]">Técnicas</span>
            </h2>
            <p class="text-gray-400 text-lg font-light">
                Ingeniería aplicada a obras civiles, sanitarias y gestión de
                maquinaria.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                services.map((item) => (
                    <article class="group relative h-[480px] perspective-1000">
                        <div
                            class:list={[
                                "absolute -inset-[1px] rounded-[24px] bg-gradient-to-b from-white/10 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 blur-[1px] ",
                                item.theme === "blue"
                                    ? "group-hover:from-[#0092b8] group-hover:to-[#0092b8]/20"
                                    : "group-hover:from-[#ffb900] group-hover:to-[#ffb900]/20",
                            ]}
                        />

                        <div class="relative h-full bg-[#18181b]/0 rounded-[23px] overflow-hidden flex flex-col z-10">
                            <div class="relative h-[100%] overflow-hidden">
                                <Image
                                    src={item.asset}
                                    alt={item.title}
                                    width={720}
                                    height={434}
                                    format="jpg"
                                    quality="mid"
                                    loading="lazy"
                                    class="w-full h-full object-cover  group-hover:opacity-100 group-hover:scale-105 transition-all duration-700"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-[#18181b] to-transparent" />

                                <div
                                    class:list={[
                                        "absolute top-4 left-4 px-3 py-1 rounded-full text-[10px] font-bold uppercase tracking-wider backdrop-blur-md border border-white/10 shadow-lg",
                                        item.theme === "blue"
                                            ? "bg-[#0092b8]/20 text-[#0092b8]"
                                            : "bg-[#ffb900]/20 text-[#ffb900]",
                                    ]}
                                >
                                    {item.subtitle}
                                </div>
                            </div>

                            <div class="p-6 flex flex-col h-[45%] relative z-10 bg-[#18181b]">
                                <h3 class="text-xl font-bold text-white mb-2 leading-tight">
                                    {item.title}
                                </h3>
                                <p class="text-gray-400 text-sm leading-relaxed mb-4 line-clamp-3 group-hover:text-gray-300 transition-colors">
                                    {item.desc}
                                </p>

                                <a
                                    href="#contacto"
                                    class="mt-auto flex items-center justify-between group/btn pt-4 border-t border-white/5"
                                >
                                    <span
                                        class:list={[
                                            "font-bold text-xs uppercase tracking-wider transition-colors",
                                            item.theme === "blue"
                                                ? "text-gray-500 group-hover:text-[#0092b8]"
                                                : "text-gray-500 group-hover:text-[#ffb900]",
                                        ]}
                                    >
                                        Cotizar
                                    </span>

                                    <div
                                        class:list={[
                                            "w-8 h-8 rounded-full flex items-center justify-center transition-colors duration-300",
                                            item.theme === "blue"
                                                ? "bg-[#0092b8] text-white"
                                                : "bg-[#ffb900] text-black",
                                        ]}
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="16"
                                            height="16"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            class="-rotate-45 group-hover/btn:rotate-0 transition-transform duration-300"
                                        >
                                            <>
                                                <path d="M5 12h14" />
                                                <path d="m12 5 7 7-7 7" />
                                            </>
                                        </svg>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>
