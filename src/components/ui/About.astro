            width: 100px;
            height: 100px;
        }
        .icon-play {
            width: 40px;
            height: 40px;
        }
    }
</style>
<script is:inline>
    const wrapper = document.getElementById("videoWrapper");
    const btn = document.getElementById("initVideoBtn");
    const poster = document.getElementById("videoPoster");
    const overlay = document.getElementById("videoOverlay");
    const text = document.getElementById("videoText");

    if (wrapper && btn) {
        btn.addEventListener("click", async () => {
            const videoSrc = wrapper.dataset.videoSrc;
            if (!videoSrc) return;
            if (poster) poster.style.display = "none";
            btn.style.display = "none";
            if (overlay) overlay.style.display = "none";
            if (text) text.style.display = "none";
            const video = document.createElement("video");
            video.src = videoSrc;
            video.className =
                "absolute inset-0 w-full h-full object-cover z-20 animate-fade-in";

            video.setAttribute("controls", "");
            video.setAttribute("playsinline", ""); 
            video.setAttribute("webkit-playsinline", ""); 
            wrapper.appendChild(video);
            try {
                await video.play();
            } catch (err) {
                console.log(
                    "El navegador bloqueó el autoplay, mostrando controles:",
                    err,
                );
            }
        });
    }
</script>
