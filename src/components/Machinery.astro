---
import { Image } from "astro:assets";
import type {MachineryProps} from "../lib/types";
const machinery: MachineryProps = [
    {
        name: "Excavadoras",
        image: "/equipos/1.jpg",
    },
    {
        name: "Retroexcavadoras",
        image: "/equipos/2.jpg",
    },
    {
        name: "Volquetes",
        image: "/equipos/3.jpg",
    },
    {
        name: "Minicargadores",
        image: "/equipos/4.jpg",
    }, // Imagen ref industrial
    {
        name: "Camión Grúa",
        image: "/equipos/5.jpg",
    }, // Imagen ref maquinaria
    {
        name: "Grúa Telescópica",
        image: "/equipos/6.jpg",
    },
    {
        name: "Telehandler",
        image: "/equipos/7.jpg",
    },
    {
        name: "Manlift",
        image: "/equipos/8.jpg",
    },
];
---

<section
    class="py-10 md:py-24 bg-[#09090b] relative overflow-hidden"
    id="maquinaria"
>
    <div
        class="absolute right-0 top-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[#ffb900] opacity-[0.03] blur-[150px] rounded-full pointer-events-none"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 md:px-6 relative z-10">
        <div
            class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-12 border-b border-white/10 pb-8"
        >
            <div>
                <span
                    class="text-[#ffb900] font-bold tracking-[0.2em] text-xs uppercase mb-2 block"
                >
                    Capacidad Operativa
                </span>
                <h2 class="text-3xl md:text-5xl font-bold text-white">
                    Flota de <span class="text-[#ffb900]">Alquiler</span>
                </h2>
            </div>
            <div class="text-right">
                <p class="text-gray-400 text-sm md:text-base mb-2">
                    Equipos listos para movilización inmediata.
                </p>
                <a
                    href="https://files.catbox.moe/jtv8gu.pdf"
                    download="https://files.catbox.moe/jtv8gu.pdf"
                    class="text-white text-sm font-bold border-b border-[#ffb900] pb-1 hover:text-[#ffb900] transition-colors"
                >
                    Descargar Brochure PDF
                </a>
            </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
            {
                machinery.map((item) => (
                    <div class="group relative rounded-2xl bg-[#18181b] overflow-hidden cursor-pointer">
                        <div class="absolute -inset-[1px] rounded-2xl bg-gradient-to-b from-white/00 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 blur-[1px] group-hover:from-[#ffb900] group-hover:to-[#ffb900]/20" />

                        <div class="relative h-full bg-[#121212] rounded-[15px] overflow-hidden z-10 flex flex-col">
                            <div class="relative aspect-[4/3] overflow-hidden">
                                <Image
                                    src={item.image}
                                    alt={item.name}
                                    width={720}
                                    height={434}
                                    format="jpg"
                                    quality="mid"
                                    loading="lazy"
                                    class="w-full h-full object-cover opacity-100 group-hover:opacity-100 group-hover:scale-110 transition-all duration-700"
                                />
                                <div class="absolute top-3 right-3 bg-black/60 backdrop-blur-md border border-white/10 px-2 py-1 rounded-md flex items-center gap-1.5">
                                    <span class="w-1.5 h-1.5 rounded-full bg-[#ffb900] animate-pulse" />
                                    <span class="text-[9px] font-bold text-gray-200 uppercase tracking-wider">
                                        Disp.
                                    </span>
                                </div>
                            </div>

                            <div class="p-4 flex items-center justify-between border-t border-white/5 bg-[#18181b] group-hover:bg-[#1a1a1a] transition-colors">
                                <h3 class="text-white text-sm md:text-base font-bold leading-tight group-hover:text-[#ffb900] transition-colors">
                                    {item.name}
                                </h3>
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-gray-600 group-hover:text-white transition-colors -rotate-45 group-hover:rotate-0"
                                >
                                    <>
                                        <path d="M5 12h14" />
                                        <path d="m12 5 7 7-7 7" />
                                    </>
                                </svg>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>

        <div
            class="mt-12 bg-[#ffb900] rounded-2xl p-8 md:p-12 relative overflow-hidden flex flex-col md:flex-row items-center justify-between gap-6 group"
        >
            <div
                class="absolute inset-0 opacity-10"
                style="background-image: repeating-linear-gradient(45deg, #000 25%, transparent 25%, transparent 75%, #000 75%, #000), repeating-linear-gradient(45deg, #000 25%, #09090b 25%, #09090b 75%, #000 75%, #000); background-position: 0 0, 10px 10px; background-size: 20px 20px;"
            >
            </div>

            <div class="relative z-10">
                <h3
                    class="text-black text-2xl md:text-3xl font-extrabold uppercase italic tracking-tighter"
                >
                    ¿Necesitas Equipo Pesado?
                </h3>
                <p class="text-black/80 font-medium mt-1">
                    Cotiza alquiler por horas o proyecto completo.
                </p>
            </div>

            <a
                href="https://wa.link/g67lxd"
                target="_blank"
                class="relative z-10 bg-black text-white px-8 py-3 rounded-xl font-bold hover:bg-white hover:text-black transition-all shadow-xl shadow-black/10 flex items-center gap-2"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path
                        d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                    ></path></svg
                >
                Contactar Ahora
            </a>
        </div>
    </div>
</section>
